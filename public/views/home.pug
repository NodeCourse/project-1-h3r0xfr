include header.pug
main
  .container
    #wizard_container
        #middle-wizard
          .step(data-state='branchtype')
            .question_title
              h3 Bienvenue
              p Découvrez les sondages publics que nos utilisateurs ont créés.
            .row.justify-content-center
                .col-lg-12
                    .item
                        a(href='/create')
                            label(style='padding:10px;background-color:#e6e6e6;')
                                strong
                                    i.icon-plus
                                    | Créer un sondage
                        
                each poll in polls
                  .col-lg-4
                    .item
                      a(href='/poll/' + poll.id)
                          label(for='answer_1')
                            if poll.background
                              img(src='img/uploads/' + poll.background, alt='')
                            strong #{poll.question}
                            | Publié par #{poll.user.firstname} #{moment(poll.createdAt).fromNow()}

include footer.pug
